import com.jcraft.jsch.UserInfo;

public class JSchSessionAdapter {

	private JSchSession jschSession;
	
	public static JSchSession getSession(String paramString1, String paramString2, String paramString3, int paramInt,
			UserInfo paramUserInfo, Proxy paramProxy) throws JSchException {
		this.jschSession = JSchSession.getSession(paramString1, paramString2, paramString3, paramInt, paramUserInfo, paramProxy);
	}
	
	public Session getSession() {
		return jschSession.getSession();
	}
	
	public void dispose() {
		jschSession.dispose();
	}
	
	public static boolean isAuthenticationFailure(JSchException paramJSchException) {
		return paramJSchException.getMessage().equals("Auth fail");
	}
	
	public static void setSessionFactory(SessionFactory paramSessionFactory) {
		JSchSession.setSessionFactory(paramSessionFactory);
	}
	
	public static void useSSHAgent(boolean paramBoolean){
		JSchSession.useSSHAgent(paramBoolean);
	}
	
