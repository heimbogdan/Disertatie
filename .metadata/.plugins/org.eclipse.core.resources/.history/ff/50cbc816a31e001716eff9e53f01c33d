package ro.helator.dia.app;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileReader;
import java.math.BigDecimal;
import java.nio.file.Files;
import java.nio.file.Paths;

import org.apache.log4j.Logger;
import org.apache.log4j.PropertyConfigurator;
import org.opencv.core.Core;
import org.springframework.context.annotation.AnnotationConfigApplicationContext;

import com.google.gson.JsonArray;
import com.google.gson.JsonElement;
import com.google.gson.JsonObject;
import com.google.gson.JsonParser;

import de.signotec.STPad.api.exceptions.SigPadApiException;
import javafx.application.Application;
import javafx.application.Platform;
import javafx.stage.Stage;
import ro.bpmwave.selfcheckin.broker.Broker;
import ro.bpmwave.selfcheckin.broker.BrokerConsumer;
import ro.bpmwave.selfcheckin.broker.BrokerProducer;
import ro.bpmwave.selfcheckin.broker.BrokerRequestBuilder;
import ro.bpmwave.selfcheckin.broker.DestinationType;
import ro.bpmwave.selfcheckin.broker.RequestType;
import ro.bpmwave.selfcheckin.config.AppContextConfig;
import ro.bpmwave.selfcheckin.factory.Toast;
import ro.bpmwave.selfcheckin.screen.ScreensContoller;
import ro.bpmwave.selfcheckin.screen.controller.LoaderScreenController;
import ro.bpmwave.selfcheckin.util.CatalogsUtil;
import ro.bpmwave.selfcheckin.util.STPad.driver.SignotecDriver;

@SuppressWarnings("restriction")
public class Main extends Application {

	private static final Logger log = Logger.getLogger(Main.class);

	@SuppressWarnings("resource")
	@Override
	public void start(Stage stage) {
		try {
			PropertyConfigurator.configure("./config/log.properties");
			Broker broker = Broker.getInstance();
			broker.initQueues();
			System.out.println(broker.getToken());
			
			
			log.info("Application started!");
			// config.properties
			SignotecDriver.init();
			AnnotationConfigApplicationContext context = new AnnotationConfigApplicationContext(AppContextConfig.class);
			ScreensContoller bean = context.getBean(ScreensContoller.class);
			bean.init(stage);
			bean.loadScreen("/fxml/LoaderScreen.fxml");
			((LoaderScreenController) bean.getCurrentController()).startLoading();
		} catch (Exception e) {
			log.error(e);

		}
	}

	public static void main(String[] args) {
		File selfLib = new File("self_lib");
		boolean loaded = false;
		String prefix = Core.NATIVE_LIBRARY_NAME;
		System.out.println(selfLib.exists());
		if(selfLib.exists() && selfLib.isDirectory()){
			File[] files = selfLib.listFiles();
			
			
			for(File f : files){
				String name = f.getName();
				if(name.equals(prefix + ".dll") || name.equals(prefix + ".so")){
					log.info("loading: " + name);
					System.out.println("loading: " + name);
					System.load(f.getAbsolutePath());
					loaded = true;
				}
			}
		}
		if(loaded){
			launch(args);
		} else {
			Exception e =  new Exception("Native library " + prefix + " not found!");
			log.error(e);
			e.printStackTrace();
		}
	}

	@Override
	public void stop() throws Exception {
		log.info("exit");
		System.out.println("exit");
		SignotecDriver.close();
		Platform.exit();
		System.exit(0);
	}
}
