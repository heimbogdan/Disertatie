package ro.helator.dia.screen.controller.tab;

import java.net.URL;
import java.util.ResourceBundle;

import org.apache.log4j.Logger;
import org.springframework.stereotype.Component;

import com.jcraft.jcterm.ConfigurationRepository;
import com.jcraft.jcterm.JSchSession;
import com.jcraft.jcterm.JSchSessionAdapter;

import javafx.fxml.FXML;
import javafx.scene.layout.AnchorPane;
import ro.helator.dia.screen.BaseScreenController;


@Component
public class SSHConsoleController extends BaseScreenController {

	private static final Logger log = Logger.getLogger(SSHConsoleController.class);
	
	private ConfigurationRepository confRepo;
	
	@FXML
	private AnchorPane sshConsolePane;
	
	@Override
	public void initialize(URL arg0, ResourceBundle arg1) {
		if(log.isTraceEnabled()){
			log.trace(">>initialize()");
		}
	}
	
	
	private void configSession(){
		String str = System.getProperty("jcterm.config.use_ssh_agent");
		if ((str != null) && (str.equals("true"))) {
			JSchSessionAdapter.useSSHAgent(true);
		}
	}

}
